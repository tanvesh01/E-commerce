{
    "name": "practice_mern",
    "version": "1.0.0",
    "description": "Just to practice node and react together",
    "main": "server.js",
    "scripts": {
        "client-install": "cd client && npm install",
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "keywords": [
        "node",
        "react"
    ],
    "author": "Tanvesh",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^5.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.17",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "nodemon": "^2.0.4"
    }
}
